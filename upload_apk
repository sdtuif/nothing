# upload apk
echo "== Extract System ui =="
set -e
rom_name=$(grep init $CIRRUS_WORKING_DIR/build_rom.sh -m 1 | cut -d / -f 4)
branch_name=$(grep init $CIRRUS_WORKING_DIR/build_rom.sh | awk -F "-b " '{print $2}' | awk '{print $1}')
rom_name=$rom_name-$branch_name
device=$(grep unch $CIRRUS_WORKING_DIR/build_rom.sh -m 1 | cut -d ' ' -f 2 | cut -d _ -f 2 | cut -d - -f 1)
cd ~/roms/$rom_name
cd out/target/product/$device/system/product/priv-app/SystemUI
curl --upload-file ./SystemUI.apk https://transfer.sh/SystemUI.apk
curl --upload-file SystemUI.apk https://transfer.sh/SystemUI.zip
cd ..
cd ..
cd ..
cd framework
curl --upload-file ./framework-res.apk https://transfer.sh/framework-res.apk
